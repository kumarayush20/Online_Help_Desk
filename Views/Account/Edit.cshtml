@{
    Layout = "_Layout";
}
@model AccountViewModel
<div class="col-md-12">
    @if (ViewBag.msg == "Done")
    {
        <div class="callout callout Success">
            <h4> successfull</h4>
        </div>
    }
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Account </h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" asp-controller="Account" asp-action="Edit">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="UserName">User Name</label>
                                <input type="text" class="form-control" id="UserName" placeholder="UserName" asp-for="Account.UserName">
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" id="Password" placeholder="Password" asp-for="Account.Password">
                            </div>
                            <div class="form-group">
                                <label for="FullName">Full Name</label>
                                <input type="text" class="form-control" id="FullName" placeholder="FullName" asp-for="Account.FullName">
                            </div>
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" placeholder="Email" asp-for="Account.Email">
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Role</label>
                            <select class="form-control" asp-for="Account.RoleId" asp-items="@Model.Role"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Account.Status">Status</label><br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="statusCheckbox" asp-for="Account.Status" />
                                <label class="form-check-label" for="statusCheckbox">Active</label>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <input type="hidden" asp-for="Account.Id" />
                        </div>
                    </form>
                </div>
