@{
    Layout = "_Layout";
}
@model Onlinehelpdesk.Models.Account

<div class="col-md-12">
    @if (ViewBag.msg == "Done")
    {
        <div class="callout callout-success">
            <h4>Successfully updated the account details</h4>
        </div>
    }
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Account Details</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" asp-controller="Account" asp-action="Profile">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <input type="text" class="form-control" asp-for="UserName" readonly="readonly" placeholder="UserName">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <label asp-for="FullName" class="control-label"></label>
                                <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label">Status</label>
                                <select class="form-control" asp-for="Status">
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                            </div>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
