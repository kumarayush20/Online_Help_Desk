<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with minimal features & hover style</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Status </th>
                                    <th>Action </th>
                                </tr>
                            </thead>


                            <tfoot>
                                @foreach (var period in ViewBag.Period)
                                {
                                    <tr>
                                        <td>@period.Id</td>
                                        <td>@period.Name</td>
                                        @* <span class="badge @(GetBadgeClass(period.Colour))">
                                            &nbsp;&nbsp;&nbsp;&nbsp;
                                        </span> *@
                                     @*    <td><span class="badge @GetBadgeClass @(period.Colour)">&nbsp;&nbsp;&nbsp;&nbsp;</span></td> *@
                                        <td>

                                            <span class="badge badge-@period.Colour">&nbsp;&nbsp;&nbsp;&nbsp;</span>

                                    </td>
                                        <td>@(period.Status ? "Active" : "Inactive")</td>
                                        <td>
                                            <a asp-controller="Period" asp-action="Delete" asp-route-id="@period.Id" onclick="return confirm('Are You Sure?')">Delete</a> |
                                            <a asp-controller="Period" asp-action="Edit" asp-route-id="@period.Id">Edit</a>
                                            @* <a asp-controller="Account" asp-action="Delete" asp-route="@account.Id" onclick="return confirm('Are You Sure?')">Edit</a> | *@
                                            @*  <a href="@Url.Action("Delete", "Account", new { id = account.Id })">Delete</a> *@
                                        </td>
                                    </tr>
                                    @*      @foreach(var account in ViewBag.accounts){
                                <tr>
                                <td>@account.Id</td>
                                <td>>@account..UserName</td>
                                <td>>@account.FullName</td>
                                <td>>@account.Email</td>
                                <td>>(@account.Status ? "":"Active":"Inactive")</td>
                                <td>Edit|Delete </td>
                                </tr> *@
                                }
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <script>
                    @functions {
                        public string GetBadgeClass(string colour)
                        {
                            switch (colour)
                            {
                                case "info":
                                    return "badge-info";
                                case "danger":
                                    return "badge-danger";
                                case "warning":
                                    return "badge-warning";
                                case "success":
                                    return "badge-success";
                                default:
                                    return "badge-secondary"; // Default or fallback class
                            }
                        }
                    }
                    $(function () {

                        $('#example2').DataTable({
                            "paging": true,
                            "lengthChange": false,
                            "searching": false,
                            "ordering": true,
                            "info": true,
                            "autoWidth": false,
                            "responsive": true,
                        });

                        
                    });
                </script>
